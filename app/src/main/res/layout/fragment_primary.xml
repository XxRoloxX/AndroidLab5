<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrimaryFragment">

    <TextView
        android:id="@+id/primary_fragment_name"
        android:layout_width="115dp"
        android:layout_height="31dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="108dp"
        android:text="Welcome"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profile_fragment_image"
        android:layout_width="287dp"
        android:layout_height="326dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/primary_fragment_surname"
        android:layout_width="290dp"
        android:layout_height="33dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="516dp"
        android:text="in food articles app"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>